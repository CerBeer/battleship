{
  "name": "ws_task",
  "version": "1.0.0",
  "description": "Template for the WebSocket remote control task",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "format": "prettier --check --ignore-unknown src/",
    "format:fix": "prettier --write --ignore-unknown src/",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext js,ts,tsx --fix",
    "start": "tsx ./index.ts",
    "start:dev": "tsx watch ./index.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "ff": "tsc && npm run format:fix && npm run lint:fix"
  },
  "author": "Andrei Auchynnikau",
  "keywords": [],
  "license": "ISC",
  "devDependencies": {
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@types/ws": "^8.5.10",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "ws": "^8.8.0",
    "uuid": "^9.0.1"
  }
}
